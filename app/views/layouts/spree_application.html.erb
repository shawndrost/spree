<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<%= render :partial => 'shared/head'%>
</head>
<%
if @body_class.nil?
  if @content_for_sidebar
    @body_class = 'two-col'
  else
    @body_class = 'one-col'
  end
end
 %>
<body class="<%= @body_class %>"<%= %( id="#{@body_id}") if @body_id %>>
  <div id="header" class="container" style="width:1170px">                                                          
    <div id="login-bar">          
      <ul id="nav-bar">
        <%= render 'shared/nav_bar' %>
      </ul>
    </div>
	<%= logo %>
  </div>
  <div id="wrapper" class="container" style="margin-right:240px"> 
    <% if @content_for_sidebar %>
    <div id="sidebar">
      <%= yield :sidebar %>
    </div>
    <% end %>
    
    <div id="content">
      <%= breadcrumbs(@taxon) if @taxon %>
      <% if flash[:notice] %>
      <div class="flash notice"><%= flash[:notice] %></div>
      <% end %>
      <% if flash[:error] %>
      <div class="flash errors"><%= flash[:error] %></div>
      <% end %>
      <%= yield %>
    </div>
    <%= render :partial => 'shared/footer'%>
  </div>
  <div style="position:absolute;width:100%;height:100%;top:0px;left:0px;z-index:-1">
	  <div style="width:200px;padding-left:1000px;margin:0px auto;background:transparent;">
		<div style="width:160px;background:url('http://localhost:3000/images/wrapper-back.png');margin-top:96px;padding:20px">
		  hello world!
		</div>
	  </div>
  </div>
</body>
</html>
