<h1><%= t("overview") %></h1>

<%= link_to "Export all products", :action => :export%><br>
<%= @results %><br>
<% form_tag({:action => 'import'}, :multipart => true) do %>
	<label for="upload_file">Import Products</label> : <br>
	<%= file_field 'upload', 'datafile' %>
	<br>
	Select one: <br>
	<%= radio_button_tag 'type', 'csv' %> CSV (Excel file)<br>
	<%= radio_button_tag 'type', 'zip' %> Zip file (includes images and one file ending in .csv)
	<br>
	<%= submit_tag "Import" %>
<% end %>
